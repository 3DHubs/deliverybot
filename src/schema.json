{
  "$id": "https://example.com/card.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration housed at .github/deploy.yml",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "auto_deploy_on": {
          "type": "string"
        },
        "transient_environment": {
          "type": "boolean"
        },
        "production_environment": {
          "type": "boolean"
        },
        "required_contexts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deployments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "environment": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "task": {
                "type": "string"
              },
              "payload": {
                "type": "object"
              },
              "auto_merge": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  }
}
