{{> repo_header}}

<nav class="UnderlineNav">
  <div class="content">
    <div class="UnderlineNav-body">
      <a href="/{{owner}}/{{repo}}" role="tab" title="Deploy" class="UnderlineNav-item selected">Deploy</a>
    </div>
  </div>
</nav>
</header>

<div class="bg-white fill">
  <div class="content">

    <div class="d-flex mt-3">
      <div class="position-relative mr-2">
        <div id="targets" class="Popover position-absolute d-none" style="top: 130%; left: 0;">
          <div class="Popover-message Popover-message--top-left mx-auto mb-2 text-left Box Box-condensed box-shadow-large">
            {{#each targets}}
              <a href="/{{../owner}}/{{../repo}}/target/{{name}}/branch/{{../branch}}" class="SelectMenu-item" role="menuitem">
                <code>{{name}}</code>
              </a>
            {{/each}}
          </div>
        </div>
        <button class="btn btn-sm" data-toggle="targets">Target: {{target}}</button>
      </div>

      <div class="position-relative mr-2">
        <div id="branches" class="Popover position-absolute d-none" style="top: 130%; left: 0;">
          <div class="Popover-message Popover-message--top-left mx-auto mb-2 text-left Box box-shadow-large">
            {{#each branches}}
              <a href="/{{../owner}}/{{../repo}}/target/{{../target}}/branch/{{name}}" class="SelectMenu-item" role="menuitem">
                <code>{{name}}</code>
              </a>
            {{/each}}
          </div>
        </div>
        <button class="btn btn-sm" data-toggle="branches">Branch: {{branch}}</button>
      </div>

      {{#with previous}}
        {{> deploy_rollback}}
      {{/with}}
    </div>

    {{#if noConfig}}
    <div class="flash mt-3">
      <p>
        You haven't setup a <code>.github/deploy.yml</code> file yet.
        Deliverybot can't deploy without this configuration file.
      </p>
        <a class="btn btn-outline" role="button" target="_blank" href="{{fileUrl}}">Create a config file</a>
    </div>
    {{/if}}

    <div class="Box mt-3" id="commit_rows">
      {{> commit_rows}}
    </div>
  </div>
</div>

{{> footer}}
